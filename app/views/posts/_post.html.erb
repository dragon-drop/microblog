<div class="bg-white p-2 space-y-4 mb-5 rounded">
  <div class="flex space-x-2 items-end">
    <div class="bg-indigo-400 h-10 w-10 rounded-full"></div>
    <div class="text-gray-600">@<%= post.user.email.split('@').first %></div>
  </div>
  <div class="text-gray-700">
    <%= post.body %>
  </div>
  <% if show_details %>
    <div>
      <%= link_to 'Show details', post_path(post), class: "text-white bg-blue-700 hover:bg-blue-800 focus:outline-none focus:ring-4 focus:ring-blue-300 font-medium rounded-full text-sm px-5 py-2.5 text-center mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"%>
    </div>
  <% end %>
</div>
